<!DOCTYPE html>
<%@ var body: String %>
#{ val settings = SettingsHolder.get(application) }#
<!--[if lt IE 7 ]> <html lang="en" class="ie6"> <![endif]-->
<!--[if IE 7 ]>    <html lang="en" class="ie7"> <![endif]-->
<!--[if IE 8 ]>    <html lang="en" class="ie8"> <![endif]-->
<!--[if IE 9 ]>    <html lang="en" class="ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
	<title>${settings.title}</title>
	<meta charset="utf-8"/>
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	<link rel="alternate" type="application/atom+xml" title="Syndication feed for ${settings.title}" href="/feed.xml" /> 
	<!--[if lt IE 9]>
	<%= c.script("html5") %>
	<![endif]-->
	<%= c.stylesheet("blog") %>
</head>
<body>
	<header id="mainheader">
		<hgroup>
			<h1><a href="${c.url("/")}">${settings.title}</a></h1>
			<h2>${settings.description}</h2>
		</hgroup>
	</header>
	<%= unescape(body) %>
	<footer>
		<p>[<%= c.msg("admin.powered.by") %>&nbsp;<a href="http://www.coeusweb.com//">Coeus Framework</a>]</p>
	</footer>
</body>
</html>
